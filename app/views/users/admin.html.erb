<% if @current_user %>
  <% if @current_user.role == "admin" %>
    <h1>Bienvenue administrateur <%= @current_user.name %> !</h1>
    <a href="/home">accueil</a>
    <a href="/users/admin">admin</a>




    <h2>créer un utilisateur</h2>

    <%= form_with(url: "/users/registration", scope: :session, local: true) do |form| %>
      <div class="actions">
        <%= form.label :email%>
        <%= form.email_field :email %>
        <%= form.label :password %>
        <%= form.password_field :password %>
        <%= form.submit "Create"%>
      </div>
    <% end %>



      <h3>créer un projet</h3>
      <div id="containers">
        <div class="form-group">
          <%= form_tag "/users/create-project", method: "post" do %>
            Project name:<br>
            <input name="name" type="text" class="form-control" id="exampleInputEmail1"><br>
            duration:<br>
            <input name="duration" type="text" class="form-control">
        </div>
          <button type="submit" class="btn btn-primary">Submit</button>
          <% end %>
        </div>

  <% else %>
    <h1>Vous n'avez pas le droit d'être ici</h1>
  <% end %>
<% end %>
